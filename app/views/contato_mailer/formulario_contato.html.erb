    <p><strong>Nome:</strong> <%= @nome %></p>
    <p><strong>Email do Remetente:</strong> <%= @email_remetente %></p>
    <p><strong>Mensagem:</strong></p>
    <blockquote>
      <%= simple_format(@mensagem) %>
    </blockquote>
  </body>
</html>