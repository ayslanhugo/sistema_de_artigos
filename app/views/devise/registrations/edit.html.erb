<div class="row justify-content-center">
  <div class="col-md-8">
    <%# Card Principal para Edição do Perfil %>
    <div class="card mt-4">
      <div class="card-header">
        <h2>Editar Perfil</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <%= f.label :email, class: "form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-info">
              Aguardando confirmação para: <%= resource.unconfirmed_email %>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :password, "Nova Senha", class: "form-label" %> <small class="text-muted">(deixe em branco se não quiser mudar)</small><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= @minimum_password_length %> caracteres no mínimo.</small>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirme a Nova Senha", class: "form-label" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <hr>

          <div class="mb-3">
            <%= f.label :current_password, "Senha Atual", class: "form-label" %> <small class="text-muted">(obrigatória para confirmar as mudanças)</small><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Atualizar", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>

    <%# Card de Perigo para Cancelar a Conta %>
    <div class="card border-danger mt-4">
      <div class="card-header bg-danger text-white">
        <h3>Cancelar minha conta</h3>
      </div>
      <div class="card-body">
        <p>Não está feliz? A exclusão da sua conta é permanente.</p>
        <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { turbo_confirm: "Você tem certeza absoluta? Esta ação não pode ser desfeita." }, method: :delete, class: "btn btn-danger" %>
      </div>
    </div>
    
    <div class="mt-3">
      <%= link_to "Voltar", :back %>
    </div>
  </div>
</div>